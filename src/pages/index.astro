---
import Layout from '../layouts/Layout.astro';
import { projects } from '../config/projects';
---

<Layout title="Home">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<div class="mb-12">
			<h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
				Hi.
			</h1>
			<p class="text-xl text-gray-600 dark:text-gray-300">
				I'm Yuval and I just graduated from MIT with a degree in Computer Science.<br>I love building stuff and I'll be documenting some of my projects in this website.
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{projects.map((project) => (
				<a 
					href={`/projects-doc/projects/${project.repo}`}
					class="block bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200"
				>
					<div class="flex flex-col h-full">
						<div class="flex-grow">
							<h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
								{project.name}
							</h2>
							<p class="text-gray-600 dark:text-gray-300 mb-4">
								{project.description}
							</p>
							<div class="flex flex-wrap gap-2 mb-4">
								{project.tags.map((tag) => (
									<span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-sm rounded-full">
										{tag}
									</span>
								))}
							</div>
						</div>
						<div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-700">
							<div class="flex items-center justify-between">
								<span class="text-sm text-gray-500 dark:text-gray-400">
									Read More
								</span>
								<svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
								</svg>
							</div>
						</div>
					</div>
				</a>
			))}
		</div>

		{projects.length === 0 && (
			<div class="text-center py-12">
				<p class="text-gray-600 dark:text-gray-300">
					No projects available yet. Check back soon!
				</p>
			</div>
		)}
	</div>
</Layout>

<style>
	/* Add any custom styles here */
	.prose {
		max-width: 85ch;
		margin: 0 auto;
	}
</style>
