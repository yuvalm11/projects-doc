  .prose a img,
  .markdown-content p a img,
  .prose p a img,
  .markdown-content a img.inline-image,
  .prose a img.inline-image {
    display: inline-block !important;
    margin: 0 !important;
    vertical-align: middle !important;
    margin-right: 0.25rem !important;
  }
  /* Make links with images display inline-flex */
  .markdown-content a[style*="inline-flex"],
  .prose a[style*="inline-flex"] {
    display: inline-flex !important;
    align-items: center !important;
    gap: 0.25rem !important;
    text-decoration: none;
  }
  .prose pre {
    background-color: #1a1a1a;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  .prose code {
    background-color: #f3f4f6;
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
  }
  .dark .prose code {
    background-color: #374151;
  }
  /* Override link styles for the GitHub link */
